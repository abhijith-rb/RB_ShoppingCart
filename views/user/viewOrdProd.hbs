 <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}

                <div class="col-md-3 p-3">
                    <div class="card" style="width: 15rem; height:20rem;">
                        <img class="card-img-top" alt="Card image cap"
                            style="height:10rem ;"src="/product-images/{{this.item}}.jpeg">      
                        <div class="card-body">
                            
                            <p class="card-text">Quantity: {{this.quantity}}</p>
                            
                            
                        </div>
                        
                    </div>

                </div>
                {{/each}}
            </div>
        </div>
        
    </section>
   